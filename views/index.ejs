<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>

    <div class="container">
        <h1 class="site-title">All Blogs</h1>

        <% if(blogs.length > 0){%>
            <% blogs.forEach((blog)=>{ %>
                <a class="blog" href="/blogs/detail/<%= blog._id %>">
                    <h3 class="title">
                        <%=blog.title%>
                    </h3>
                    <p class="content">
                        <%=blog.body%>
                    </p>
                </a>
             
            <%  }) %>

        <% } %>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>

</html>